// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/yhs88a/devcontainer/tree/main/src/ubuntu-base
{
  "name": "ubuntu-base",
  "dockerComposeFile": [
    "./docker-compose.devcontainer.yml"
  ],
  "service": "github-yhs88a-devcontainer",
  "remoteUser": "vscode",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
    "extensions": ["ms-azuretools.vscode-docker"]
    }
  },
  "workspaceFolder": "/home/vscode/devcontainer",
  "features": {
      "ghcr.io/yhs88a/devcontainer/common-utils:1": {},
      "ghcr.io/yhs88a/devcontainer/docker-in-docker:1": {}
  }
}
